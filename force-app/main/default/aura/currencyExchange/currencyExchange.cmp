<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" access="global" controller="CurrencyExchangeController" >
    
    <aura:attribute name="exchnageData" type="List[]" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <lightning:card>
        <div class="slds-grid slds-gutters">
            <div class="slds-col slds-size_2-of-6">
                <div class="slds-p-around_small">
                    <lightning:select aura:id="selectFrom" name="select" label="FROM CURRENCY">
                        <option value="">choose one...</option>
                        <option value="BTC">Bitcoin</option>
                        <option value="ETH">ETH</option>
                    </lightning:select>
                </div>
            </div>
            <div class="slds-col slds-size_2-of-6">
                <div class="slds-p-around_small">
                    <lightning:select aura:id="selectTo" name="select" label="TO CURRENCY">
                        <option value="">choose one...</option>
                        <option value="INR">Indian Rupee</option>
                        <option value="USD">US Dollars</option>
                    </lightning:select>  
                </div>
            </div>
        </div>
        <div class="slds-p-around_small">
            <lightning:button label="Get Exchange Rates" title="Get Exchange Rates" variant="neutral" onclick="{! c.handleClick }"/>
        </div>
        
        <aura:iteration items="{!v.exchangeData}" var="exch" indexVar="key">
            {!exch.key} : {!exch.value}
        </aura:iteration>
    </lightning:card>
</aura:component>