<aura:component controller="WhatsAppMessageService"
    implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes"
    access="global">
    <lightning:notificationsLibrary aura:id="notifLib" />

    <lightning:card title="Send WhatsApp Message">
        <div class="row slds-var-p-around_small">
            <lightning:input aura:id="mobileNumber" name="mobileNumber" label="Mobile Number" />
            <lightning:input aura:id="message" name="message" label="Message" />
        </div>
        <div class="row slds-var-p-around_small">
            <p>
                <lightning:button variant="brand" label="Send Message" title="Send Message"
                    onclick="{! c.handleClick }" />
            </p>
        </div>
    </lightning:card>

</aura:component>